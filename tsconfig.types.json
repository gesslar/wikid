{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./src/types",
    "rootDir": "./src",
    "strict": false,
    "skipLibCheck": true,
    "lib": [
      "ES2022",
      "DOM"
    ]
  },
  "include": [
    "src/**/*.js"
  ],
  "exclude": [
    "src/types/**/*",
    "node_modules",
    "test/**/*"
  ]
}
